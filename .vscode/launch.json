{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "chrome",
			"request": "launch",
			"name": "Debug: Dev Server",
			"url": "http://localhost:5173",
			"webRoot": "${workspaceFolder}/src"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Debug: Vitest",
			"program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
			"args": ["run", "--reporter=verbose"],
			"console": "integratedTerminal",
			"smartStep": true,
			"sourceMaps": true
		}
	]
}
